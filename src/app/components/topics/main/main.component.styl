$PHI = 1.618

$ONE = (100vw / (1+$PHI))
$topicPanelWidth = $ONE * $PHI

$topicsPanelWidth = ($ONE / ($PHI))
$categoryPanelWidth = $ONE / (1+$PHI)

:host
  display flex
  align-self stretch
  align-content center
  flex-grow 1
  width 100%
  overflow hidden

  .main
    display flex
    width 100%

    .category-list
      order 1
      //flex-grow 1000
      width $categoryPanelWidth
      overflow hidden
      text-overflow ellipsis
      transition all ease 300ms
      .new-topic
        height 2em
        .button
          display block

      .settings
        height calc(3em + 1vh)
        border-top solid 1px rgba(255, 255, 255, 0.024)
        background-color rgba(255, 255, 255, 0.02)
        vertical-align middle
        display flex
        > div
          width 100%
        .user
          flex-grow 5
          font-size 0.8em
          padding-top calc(0.5em + 0.5vh)
          overflow hidden
          text-overflow ellipsis
          a
            text-decoration none
            font-weight bolder
          kbd
            opacity 0.5
        .cog
          display block
          line-height calc(3em + 1vh)
          min-width 2em
          text-align center
        .avatar
          height calc(3em + 1vh)
          width calc(3em + 1vh)
          vertical-align middle
          text-align center
          align-items center
          align-content center
          display flex
          img
            max-height calc(2em)
            max-width calc(2em)
            height auto
            margin 0 auto




    .topic-list
      order 2
      //flex-grow 1618
      width $ONE
      transition all ease 300ms


    .topic-details
      order 3
      width 0
      transition all ease 300ms
      overflow hidden

    &.topic-selected

      .topic-list
        width $topicsPanelWidth

      .topic-details
        //flex-grow 4236
        width $topicPanelWidth

        .compose
          width $topicPanelWidth



      @media screen and (max-width: 600px)
        .category-list
          transform translateX( - $topicPanelWidth)
          width 0
        .topic-list
          transform translateX( - $topicPanelWidth)
          width 0
        .topic-details
          width 100vw
